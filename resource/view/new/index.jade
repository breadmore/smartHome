doctype html

html(lang='en')
    head
        title SecureHome
        script(src='/plugin/jquery/dist/jquery.js' type='text/javascript')
        link(href='../plugin/bootstrap/dist/css/bootstrap.css' rel='stylesheet')
        script(src='/plugin/bootstrap/dist/js/bootstrap.js' type='text/javascript')

        link(href='../css/new/index.css' rel='stylesheet')
        link(href='./css/common.css' rel='stylesheet')
        //script(src='/plugin/socket.io/socketio.min.js' type='text/javascript')
        //script(src='/javascript/index.js' type='text/javascript')

    body
        .container-fluid(style='background: rgb(53, 63, 75); min-height:700px')
            .center
                .title-logo
                    .title-logo-content
                        img.title-logo-img(src="/image/SIotLogo.png")
                        span.title-logo-text
                            span SecureHome
                            |ETRISECURE GATEWAY SOLUTION
                .index-content
                    .index-content.top-bar
                        .top-bar-left SIGN IN
                        .top-bar-right.btn#btn-registration Registration
                    .index-content.signin
                        img(src="/image/login.png").center-img
                        form(action='/api/login/demo', method='post').form-group
                            input.form-control.input-lg(type='text', name="username" placeholder="Email or Username")
                            input.form-control.input-lg(type="password" name="password" placeholder="Password")
                            .checkbox
                                input(type="checkbox")
                                |Remember me
                            input.submit(type="submit" value="Confirm")