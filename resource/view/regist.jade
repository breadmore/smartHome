doctype html

html(lang='en')
    head
        script(src='/plugin/jquery/dist/jquery.js')
        link(href='./css/regist.css' rel='stylesheet')
        title SecureHome

    body
        .title
            span
                img(src="/image/SIoTLogo.png")
            span.title1 SecureHome
            span.title2 ETRI SECURE GATEWAY SOLUTION
        .sign_in
            .sign_in_title
                .text REGISTRATION
                .button Create an account
            .sign_in_content
                form(method="post", action="/api/regist")
                    input(type="hidden" name="authority" value="admin")
                    .id
                        p ID
                        input(type="text" name="userId" placeholder="Email or Username")
                    .password
                        p Password
                        input(type="password" id="password" name="password" placeholder="Password")
                    .name
                        p Account name
                        input(type="text" name="name" placeholder="Account name")
                    .email
                        p Email
                        input(name="email" placeholder="Email")
                    .phone
                        p Phone
                        input(name="phone" placeholder="Phone Number")
                    .submit
                        button.cancel Cancel
                        button(type="submit").confirm Confirm
                    .existing
                        a(href="#") Sing in to and existing account
