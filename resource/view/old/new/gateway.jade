extends layout

append head
    link(href='/css/new/gateway.css' rel='stylesheet')


block content
    .modal.fade#addgatewayModal(role="dialog")
        .modal-dialog
            .modal-content
                .modal-header
                    .modal-title DETAILS
                    div
                        button modify
                        div IoT gateway
                .modal-body
                    .gateway_name Gateway name
                        div
                            input(type="text")
                    .mqtt_broker_ip MQTT broker IP
                        div
                            input(type="text")
                    .mqtt_broker_port MQTT broker Port
                        div
                            input(type="text")
                    .vendor Vendor
                        div
                            select
                                option ETRI
                    .security_version Security version
                        div
                            select
                                option ETRI
                .modal-footer
                    button.btn.btn-default(data-dismiss="modal")#close Close
                    button.btn.btn-default(data-dismiss="modal")#confirm Confirm
    .modal.fade#modify_gateway_Modal(role="dialog")
        .modal-dialog
            .modal-content
                .modal-header
                    .modal-title DETAILS
                    div
                        button modify
                        div IoT gateway
                .modal-body
                    .gateway_name
                        span.name Gateway name
                        span.value ETRI-SG-001
                    .mqtt_broker_ip
                        span.name MQTT IP
                        span.value 192.168.255.254
                    .mqtt_broker_port
                        span.name MQTT broker Port
                        span.value 20000
                    .vendor
                        span.name Vendor
                        span.value ETRI
                    .security_version
                        span.name Security version
                        span.value ETRI Security v1.0
                    .uptime
                        span.name Uptime
                        span.value 1231H 11M 30S
                    .uplink_downlink
                        span.name Uplink/Downlink
                        span.value 15.03GB / 15GB
                .modal-footer
                    button.btn.btn-default(data-dismiss="modal")#close Close
                    button.btn.btn-default(data-dismiss="modal")#confirm Confirm
    .row.no-padding.content-title
        .col-sm-12.no-padding
            img(src="/image/gatewayWhite.png")
            span Gateway Management
    .row.content-header.no-padding
        .col-sm-12.no-padding
            h2 Gateways
            h5 Registered gateway
    .row.no-padding.content-contents
        .col-12.no-padding.table-frame
            button(data-target="#addgatewayModal" data-toggle="modal").btn.btn-common#add-gateway-btn Add Gateway
            table(style='width:100%').table-responsive
                thead
                    tr
                        td Index
                        td Name
                        td MQTT IP
                        td MQTT Port
                        td Vendor
                        td Security version
                        td Details
                tbody
                    tr
                        td 0
                        td ETRI-SG-001
                        td 192.168.255.254
                        td 20000
                        td ETRI
                        td ETRI Security  v1.0
                        td
                            button.details_button(data-target="#modify_gateway_Modal" data-toggle="modal") CLICK
        .col-12.no-padding.pager-frame
            nav
                ul
                    li
                        a(href="#") <
                    li
                        a(href="#") 1
                    li
                        a(href="#") 2
                    li
                        a(href="#") 3
                    li
                        a(href="#") 4
                    li
                        a(href="#") >