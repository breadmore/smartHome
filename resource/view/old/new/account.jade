extends layout

append head
    link(href='/css/new/account.css' rel='stylesheet')


block content
    .modal.fade#modify_Modal(role="dialog")
        .modal-dialog
            .modal-content
                .modal-header
                    .modal-title DETAILS
                    div
                        button modify
                        div IoT gateway
                .modal-body
                    .gateway_name Account type
                        div
                            select
                                option Admin
                                option User
                    .mqtt_broker_ip Account name
                        div
                            input(type="text" name="name")
                    .mqtt_broker_port Password
                        div
                            input(type="text" name="password" placeholder="Password").password
                        div
                            input(type="text" name="password_check" placeholder="Re-type Password")
                    .vendor Email address
                        div
                            input(type="text" name="email" placeholder="Email or Username")
                .modal-footer
                    button.btn.btn-default(data-dismiss="modal")#close Close
                    button.btn.btn-default(data-dismiss="modal")#confirm Confirm
    .row.no-padding.content-title
        .col-sm-12.no-padding
            img(src="/image/accountWhite.png")
            span Account Management
    .row.content-header.no-padding
        .col-sm-12.no-padding
            h2 Account
            h5 Admin/user management
    .row.no-padding.content-contents
        .col-12.no-padding.table-frame
            button(data-target="#addgatewayModal" data-toggle="modal").btn.btn-common#add-account-btn Add Gateway
            table.table-responsive
                thead
                    tr
                        td(style='min-width:40px;')
                        td User level
                        td User name
                        td Email address
                        td Details
                tbody
                    tr
                        td(style='min-width:40px;')
                            input(type="checkbox")
                        td admin
                        td Hong 길동
                        td GdHong@naver.com
                        td
                    tr
                        td(style='min-width:40px;')
                            input(type="checkbox")
                        td user
                        td Kim 희동
                        td HdKim@naver.com
                        td
                            button.details_button(data-target="#modify_gateway_Modal" data-toggle="modal") CLICK
            .button_list
                button.modify(data-target="#modify_Modal" data-toggle="modal") Modify
                button.delete Delete
        .col-12.no-padding.pager-frame
            nav
                ul
                    li
                        a(href="#") <
                    li
                        a(href="#") 1
                    li
                        a(href="#") 2
                    li
                        a(href="#") 3
                    li
                        a(href="#") 4
                    li
                        a(href="#") >
