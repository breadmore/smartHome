extends layout

append head
    link(rel='stylesheet', type='text/css', href='/plugin/datatables-1.10.16/css/dataTables.css')
    script(type='text/javascript', src='/plugin/datatables-1.10.16/js/datatables.js')
    script(type='text/javascript', src='/plugin/datatables-1.10.16/js/datatables.bootstrap4.js')
    script(src='/javascript/iotdevice.js')
    link(rel='stylesheet', type='text/css', href='/css/iotdevice.css')
    link(rel='stylesheet', type='text/css', href='/css/common.css')
    script(defer='', src='https://use.fontawesome.com/releases/v5.0.10/js/all.js', integrity='sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+', crossorigin='anonymous')





    style(type='text/css').

append title
    span.col-xl-2.content-title.no-padding IoT DEVICE

block content
    .col-12.no-padding
        input.btn.btn-primary.btn-action(type='button', value='Delete')#deleteButton
        input.btn.btn-primary.btn-action(type='button', value='Modify' data-target="#modifyModal" data-toggle="modal")#modifyButton
        input.btn.btn-primary.btn-action(type='button', value='Add' data-target="#addModal" data-toggle="modal")#addButton
    table#dataTable.no-padding(style='width:100%;')
        thead
            tr
                th(scope='cols') Device ID
                th(scope='cols') Pre Shared Key
                th(scope='cols') Object ID
                th(scope='cols') Entity ID
                th(scope='cols') Session ID
                th(scope='cols') Gateway ID
                th(scope='cols') Name
                th(scope='cols') Type
                th(scope='cols') Connected
                th(scope='cols') Authenticate
                th(scope='cols') Registered
    .modal.fade#modifyModal(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-header
                    .modal-title MODIFICATION
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    //div
                    //    button modify
                .modal-body
                    .modal-body-content
                        p Gateway ID
                        input(type="number")#gateway-id
                        p Device Name
                        input(type="text" value="")#device-name
                        p Device type
                        select#type
                            option(value=1, selected="selected") Temperature sensor
                            option(value=2) Temperature sensor2
                            option(value=3) Temperature sensor3
                        p Device ID
                        input(type="text")#device-id
                        p Pre Shared Key
                        input(type="text")#pre-shared-key
                        p Object ID
                        input(type="text")#object-id
                        p Session ID
                        input(type="text")#session-id
                        p Connected
                        .radio-group#connected
                            label.radio-inline
                                input(type='radio', name='optradio')
                                | &nbsp;OK
                            label.radio-inline(style="margin-left:12px")
                                input(type='radio', name='optradio')
                                | &nbsp;NO
                        p Authenticate
                        .radio-group#authenticate
                            label.radio-inline
                                input(type='radio', name='optradio')
                                | &nbsp;OK
                            label.radio-inline(style="margin-left:12px")
                                input(type='radio', name='optradio')
                                | &nbsp;NO
                        //p Policy
                        //input(type="number")#policy
                .modal-footer
                    button.btn.btn-default(data-dismiss="modal") Cancel
                    button.btn.btn-primary(type='button')#saveButton Save Change
    .modal.fade#addModal(role="dialog")
        .modal-dialog
            .modal-content
                .modal-header
                    .modal-title RESGISTRATION
                    //div
                    //    button modify
                .modal-body
                    .modal-body-content
                        .gateway_id Gateway ID
                        select#add-gateway-id
                            option(value=111, selected="selected") ETRI-SG-001
                            option(value=222) ETRI-SG-002
                            option(value=333) ETRI-SG-003
                        .device-name Device Name
                        input(type="text" value="")#add-device-name
                        .select-device-type Device type
                        select#add-type
                            option(value=1, selected="selected") Temperature sensor
                            option(value=2) Temperature sensor2
                            option(value=3) Temperature sensor3
                        .device-id Device ID
                        input(type="text")#add-device-id
                        .pre_shared_key Pre Shared Key
                        input(type="text" value="")#add-pre-shared-key
                        .object-id Object ID
                        input(type="text" value="")#add-object-id
                        .session-id Session ID
                        input(type="text" value="")#add-session-id
                        .connection Connection
                        .radio-group
                            label.radio-inline
                                input(type='radio', name='optradio')
                                | &nbsp;OK
                            label.radio-inline(style="margin-left:12px")
                                input(type='radio', name='optradio')
                                | &nbsp;NO
                        .authentication Authentication
                        .radio-group
                            label.radio-inline
                                input(type='radio', name='optradio')
                                | &nbsp;OK
                            label.radio-inline(style="margin-left:12px")
                                input(type='radio', name='optradio')
                                | &nbsp;NO
                .modal-footer
                    button.btn.btn-default(data-dismiss="modal") Cancel
                    button.btn.btn-primary(type='button')#addButton Add Device