{
  "name": "IoT-Secure-Interface",
  "version": "1.0.0",
  "description": "IoT Home Secure Interface building and implements. Smart home device with xiaomi & local devices management and control.",
  "private": true,
  "readme": "README.md",
  "keywords": [
    "node-red",
    "embedded",
    "express"
  ],
  "contributors": [
